<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leave_roomname"
        android:text="RoomName"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/round_bg2"
        android:elevation="5dp"
        android:layout_margin="35dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/leave_img" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leave_host"
            android:text="name"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leave_details"
            android:text="details"
            android:layout_marginTop="5dp"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leave_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="참가"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/leave_unavail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="F U L L"
                android:textSize="25dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:paddingBottom="10dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>